{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "jsx": "react",
    "outDir": "./dist/components",
    "declaration": true,
    "declarationDir": "./dist/types/components",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["react", "node"],
    "moduleResolution": "node"
  },
  "include": [
    "src/components"
  ],
  "exclude": ["node_modules", "src/stories/*"]
}
